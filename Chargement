def my_generator():
    for x in range(1, 100):
        print("new value is generated!")
        yield x

gener = my_generator()

val = next(gener)

print (val)

val = next(gener)

print (val)

liste =[1,2,3,4,5]

#map: on applique la fonction à toutes les valeurs de la liste
#lambda permet de créer une fonction sans nom
#filter ne ressort que les données qui satisfont la condition

print(list(map(lambda num : num**2, liste)))
print(list(filter(lambda num : num%2==0, liste)))

test = lambda num : num**2
print(test(5))

class Func_Test:
    def __init__(self):
        pass
    def square(self,number):
        return number**2

test_class = Func_Test()
test = lambda x :test_class.square(x)

print(test(10))